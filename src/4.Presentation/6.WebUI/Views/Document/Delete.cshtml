@model PocLineAPI.Presentation.WebUI.Models.DocumentViewModel

@{
    ViewData["Title"] = "Delete Document";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Document
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this document? This action cannot be undone.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Document ID:</dt>
                        <dd class="col-sm-9">
                            <code class="text-muted">@Model.Id</code>
                        </dd>
                        
                        <dt class="col-sm-3">Content Preview:</dt>
                        <dd class="col-sm-9">
                            <div class="border rounded p-2 bg-light">
                                @if (Model.Content.Length > 200)
                                {
                                    <span>@($"{Model.Content.Substring(0, 200)}...")</span>
                                }
                                else
                                {
                                    <span>@Model.Content</span>
                                }
                            </div>
                        </dd>
                        
                        <dt class="col-sm-3">Content Length:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.Content.Length characters</span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this document?')">
                                    <i class="bi bi-trash"></i> Delete Permanently
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>