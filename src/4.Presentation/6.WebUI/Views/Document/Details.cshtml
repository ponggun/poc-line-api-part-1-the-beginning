@model PocLineAPI.Presentation.WebUI.Models.DocumentViewModel

@{
    ViewData["Title"] = "Document Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-file-text"></i> Document Details
                    </h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Document ID:</dt>
                        <dd class="col-sm-9">
                            <code class="text-muted">@Model.Id</code>
                        </dd>
                        
                        <dt class="col-sm-3">Content:</dt>
                        <dd class="col-sm-9">
                            <div class="border rounded p-3 bg-light">
                                <pre class="mb-0" style="white-space: pre-wrap; word-wrap: break-word; font-family: inherit;">@Model.Content</pre>
                            </div>
                        </dd>
                        
                        <dt class="col-sm-3">Content Length:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.Content.Length characters</span>
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>