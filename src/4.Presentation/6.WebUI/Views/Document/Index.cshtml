@model PocLineAPI.Presentation.WebUI.Models.DocumentListViewModel

@{
    ViewData["Title"] = "Documents";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">Document Management</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Document
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Documents.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">All Documents (@Model.Documents.Count)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Content</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var document in Model.Documents)
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted font-monospace">@document.Id</small>
                                            </td>
                                            <td>
                                                <div class="content-preview">
                                                    @if (document.Content.Length > 100)
                                                    {
                                                        @($"{document.Content.Substring(0, 100)}...")
                                                    }
                                                    else
                                                    {
                                                        @document.Content
                                                    }
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@document.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@document.Id" class="btn btn-sm btn-outline-secondary">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@document.Id" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-3">
                            <i class="bi bi-file-text display-1 text-muted"></i>
                        </div>
                        <h5 class="card-title">No Documents Found</h5>
                        <p class="card-text text-muted">Get started by creating your first document.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create First Document
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>