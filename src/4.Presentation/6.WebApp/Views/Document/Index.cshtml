@model IEnumerable<PocLineAPI.Domain.Entities.Document>

@{
    ViewData["Title"] = "Documents";
}

<h1>Documents</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="mb-3">
    <form asp-action="Search" method="get" class="form-inline">
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search documents..." />
            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary">Search</button>
            </div>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Content
            </th>
            <th>
                Metadata
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @foreach (var meta in item.Metadata)
                    {
                        <span>@meta.Key: @meta.Value</span><br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>